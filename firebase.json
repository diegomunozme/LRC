{
  "firestore": {
    "rules": "./client/firestore.rules",
    "indexes": "./client/firestore.indexes.json"
  },
  "hosting": {
    "public": "./client/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "./client/build/index.html"
      }
    ]
  }
}
